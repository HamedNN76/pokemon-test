{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "target": "ES5",
    "module": "commonjs",
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["**/*.spec.ts", "**/*.spec.tsx", "node_modules", "jest.config.js", "jest.setup.ts", "**/*.mock.ts"],
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"]
}
